<body class="app header-fixed aside-menu-hidden">

    <!-- *APP-HEADER* -->
    @if (SignInManager.IsSignedIn(User))
    {
        @Html.Partial("_AppHeader")
    }

    <!-- /*APP-HEADER* -->

    <div class="app-body">
        <!-- *SIDEBAR-NAV* -->
        <div class="sidebar d-lg-none">

            @Html.Partial("_SidebarNav")
            <button class="sidebar-minimizer brand-minimizer" type="button"></button>

        </div>
        <!-- *SIDEBAR-NAV* -->
        <!-- *MAIN CONTENT* -->
        <main class="main">

            <!-- /*BREADCRUMB* -->
            <!-- /*BREADCRUMB* -->
            <!-- *CONTAINER-FLUID* -->
            <div class="container-fluid">
                @{Html.RenderPartial("_Alerts");}

                <!-- *PAGE* -->
                @RenderBody()
                <!-- /*PAGE* -->
            </div>
            <!-- /*CONTAINER-FLUID* -->
        </main>
        <!-- /*MAIN CONTENT* -->
    </div>

    <footer class="app-footer">
        <span><a href="#">I-Dutto</a> - @DateTime.Now.Year.ToString()</span>
        <span class="ml-auto">Desenvolvido Por <a href="#">I-Dutto</a> <label class="@(SignInManager.IsSignedIn(User) ? "" : "d-none")" id="users-online"></label> <label class="@(SignInManager.IsSignedIn(User) ? "" : "d-none")"> usuário(s) online</label></span>
    </footer>

    <!-- JQuery Scripts -->

    <script src="https://kit.fontawesome.com/5b32c8293d.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/umd/popper.js"></script>
    <script src="~/lib/moment.js/moment.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jqueryui/jquery-ui.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/lib/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.js"></script>
    <script src="~/lib/formatter.js/jquery.formatter.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.22/rr-1.2.7/datatables.min.js"></script>

    <!-- CoreUI main scripts -->
    <script src="~/js/app.js"></script>

    <!-- Custom scripts required by this view -->
    @RenderSection("Scripts", required: false)
</body>
</html>